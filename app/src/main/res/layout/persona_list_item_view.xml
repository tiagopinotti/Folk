<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_card_inner_padding">

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/material_flat" />

    <TextView
        android:id="@+id/primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondary_text"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/secondary_text"
        android:text="@string/title"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primary_text"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/image_list"
        android:layout_toRightOf="@+id/image_list"
        android:text="@string/subtitle"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="13sp" />

</RelativeLayout>